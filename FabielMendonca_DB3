CREATE TABLE Representantes (
	codigo_representante INT PRIMARY KEY IDENTITY,
	nome_representante VARCHAR(50)
	);


CREATE TABLE Pedidos (
	numero_pedido INT PRIMARY KEY IDENTITY,
	valor_pedido DECIMAL(16,3),
	codigo_representante INT NULL,
	CONSTRAINT fk_codigo_representante
	  FOREIGN KEY(codigo_representante)
	    REFERENCES Representantes(codigo_representante)
	);


