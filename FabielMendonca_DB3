SELECT * 
FROM pedidos p
inner join REPRESENTANTES r
  on p.codigo_representante = r.codigo_representante
  

SELECT * 
FROM pedidos p
left join REPRESENTANTES r
  on p.codigo_representante = r.codigo_representante
  
  
SELECT * 
FROM pedidos p
right join REPRESENTANTES r
  on p.codigo_representante = r.codigo_representante
  

SELECT * 
FROM pedidos p
full outer join REPRESENTANTES r
  on p.codigo_representante = r.codigo_representante
